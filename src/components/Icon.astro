---
interface Props {
        class?: string;
        name: string | null;
}
---

{
        Astro.props.name ? (
                <svg
                        width='20'
                        height='20'
                        class={Astro.props.class}
                        viewBox='0 0 25 25'>
                        <use href={`/icons-sprite.svg#${Astro.props.name}`} />
                </svg>
        ) : null
}

---
import Container from '@c/Container.astro';
import { Image } from 'astro:assets';
import image_1 from '@i/pr/phone-mocks.png';
import logo from '@i/pr/logo.png';
---

<section
        id='phone'
        class='pt-20 md:pt-40 pb-1 md:pb-10 lg:pb-0 2xl:pb-20 overflow-hidden'>
        <Container class='mx-auto flex items-center min-h-[500px] h-[100vw] lg:h-screen lg:-min-h-[      bbnnnnnnn1200px] relative'>
                <Image
                        src={image_1}
                        alt='Praction marketing homescreen'
                                class='absolute top-0 h-auto w-full md:w-auto md:h-full right-0 object-contain object-right translate-x-20'
                />
                <Image
                        src={logo}
                        alt='Praction marketing homescreen'
                                class='relative w-1/2 max-w-96 h-auto md:translate-y-full'
                />
        </Container>

</section>

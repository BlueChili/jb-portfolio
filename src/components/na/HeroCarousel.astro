---
import { Image } from 'astro:assets';

import Hero1 from '@i/na/hero1.png';
import Hero2 from '@i/na/hero2.png';
import Hero3 from '@i/na/hero3.png';


const images = [
        Hero1,
        Hero2,
        Hero3
];
---

<style>
        .carousel {
                --swiper-pagination-bullet-inactive-color: #676767;
                --swiper-pagination-color: #999;
                --swiper-navigation-color: #0A0D13;
        }
</style>
<swiper-container
                class='carousel'
                id='na-hero-swiper'
        css-mode='true'
        loop='true'
        autoplay-delay='3200'
        pagination='true'
        controls='false'
        navigation='false'
        pagination-clickable='true'
        init='false'>
        {
                images.map((x) => (
                        <swiper-slide>
                                <Image
                                        src={x}
                                        alt=''
                                />
                        </swiper-slide>
                ))
        }
</swiper-container>
<script src='https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js'></script>
<script>
        document.addEventListener('DOMContentLoaded', () => {
                const swiperEl = document.querySelector('#na-hero-swiper');

                const params = {
                        injectStyles: [
                                `
                                  .swiper-wrapper {
                                        margin-bottom: 1px;
                                  }
                                  `,
                        ],
                };

                // @ts-ignore
                Object.assign(swiperEl, params);
                // @ts-ignore
                swiperEl.initialize();
        });
</script>

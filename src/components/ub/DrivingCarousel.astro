        Intro,
        Pony,
        Pony1,
        Pony2,
        Shell0,
        Shell1,
        Shell2,
        Shell3,
        Shell4,
        Battery0,
        Battery1,
        Battery2,
        Battery3,
        Battery4,
        Battery5,
        Battery6,
        Battery7,
        GuitarRig0,
        GuitarRig1,
        GuitarRig2,
        GuitarRig3,
        GuitarRig4,
        GuitarRig5,
        GuitarRig6,
        GuitarRig7,
        GuitarRig8,
        GuitarRig9,

---

<style>
        .carousel {
                --swiper-pagination-bullet-inactive-color: #676767;
                --swiper-pagination-color: #999;
                --swiper-navigation-color: #999;
        }
</style>
<swiper-container
        class='carousel'
        id='ub-driving-swiper'
        css-mode='true'
        loop='true'
        autoplay-delay='4000'
        pagination='true'
        controls='true'
        navigation='true'
        pagination-clickable='true'
        init='false'>
        {
                images.map((x) => (
                        <swiper-slide>
                                <Image
                                        src={x}
                                        alt=''
                                />
                        </swiper-slide>
                ))
        }
</swiper-container>
<script src='https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js'></script>
<script>
        document.addEventListener('DOMContentLoaded', () => {
                const swiperEl = document.querySelector('#ub-driving-swiper');

                const params = {
                        injectStyles: [
                                `
                                  .swiper-wrapper {
                                        margin-bottom: 56px;
                                  }
                                  `,
                        ],
                };

                // @ts-ignore
                Object.assign(swiperEl, params);
                // @ts-ignore
                swiperEl.initialize();
        });
</script>

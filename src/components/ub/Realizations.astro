---
import { Image } from 'astro:assets';
import Container from '@c/Container.astro';
import Box from '@c/na/Box.astro';
import Em from '@c/Em.astro';
import SectionHeading from './SectionHeading.astro';
import bgImage from '@i/ub/realizations-bg.png';
import TabSwitcher from './Realizations/TabSwitcher';
---

<style is:global>
        .realizationsbox {
                background: radial-gradient(54.33% 54.33% at 50% 45.67%, rgba(255, 255, 255, 0.11) 0%, rgba(255, 255, 255, 0.07) 100%),
                        rgba(255, 255, 255, 0.02);

                box-shadow:
                        2px 2px 0px 0px rgba(255, 255, 255, 0.12),
                        118px -99px 43px 0px rgba(0, 0, 0, 0),
                        76px -64px 40px 0px rgba(0, 0, 0, 0.01),
                        43px -36px 33px 0px rgba(0, 0, 0, 0.05),
                        19px -16px 25px 0px rgba(0, 0, 0, 0.09);
                backdrop-filter: blur(160px);
        }
</style>
<section
        class='pt-[80px] md:pt-[120px] lg:pt-[180px] pb-[80px] md:pb-[120px] lg:pb-[180px] relative'
        id='realizations'>
        <Image
                src={bgImage}
                alt=''
                class='absolute inset-0 h-full w-full object-cover'
        />
        <div
                class='absolute w-full inset-0 h-[670px] md:h-[840px] lg:h-[830px] xl:h-[870px] laptop:h-[990px] 2xl:h-[1090px] bg-gradient-to-b from-black/[0.8] to-black/[0]'>
        </div>
        <Container class='mx-auto relative'>
                <SectionHeading
                        number='5'
                        variant='dark'
                        >Realizations</SectionHeading
                >
                <p class='text-brand-grey text-2xl pb-12 tracking-[-0.06rem] lg:text-3xl xl:text-4xl laptop:text-5xl'>
                        Find below the many
                        <Em variant='dark'> manifestations</Em> of our
                        <Em variant='dark'> new design</Em> and
                        <Em variant='dark'> data model</Em>.
                </p>
                <div class='flex flex-col leading-normal lg:flex-row gap-7 pb-14 text-[0.8125rem] md:text-sm lg:text-base 2xl:text-xl'>
                        <div class='basis-3/5'>
                                <p class='font-light'>Click a Browser thumbnail to watch a full walkthrough.</p>
                        </div>
                        <div class='lg:flex-1'>
                                <div class='flex'>
                                        <p class='flex-1 font-light'>
                                                Filetypes
                                                <br />Search
                                                <br />Filters
                                                <br />Tags
                                                <br />User Tags
                                                <br />Color Tags / Favorites
                                                <br />List Sorting
                                        </p>
                                        <p class='flex-1 font-light'>
                                                Visual Tile Browser
                                                <br />Pinning
                                                <br />Audio Preview
                                                <br />Info Panel
                                                <br />Custom Metadata
                                                <br />Results List
                                        </p>
                                </div>
                        </div>
                </div>
        </Container>

        <Container class='2xl:max-w-[1560px] mx-auto relative'>
                <Box class='mb-2.5 lg:mb-5 laptop:mb-10 realizationsbox border-none'>
                        <TabSwitcher client:visible />
                </Box>
        </Container>
</section>

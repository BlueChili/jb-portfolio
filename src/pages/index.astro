---
import Container from '@c/Container.astro';
import Layout from 'src/layouts/base.astro';
import Tag from '@c/Tag.astro';
import { marked } from 'marked';

type Project = {
        tags: string[] | null;
        image: string;
        title: string;
        description: string;
        blueBg?: boolean;
        imageClass?: string;
        url?: string;
};

const objective =
        "I am deeply passionate about the intersection of systems engineering and user delight. I'm a lifelong design thinker who's dedicated the last 10 years of my career to producing world-class UI/UX experiences, building award-winning products from discovery, through development, release, and refinement.";

const projects: Project[] = [
        {
                title: 'Native Access',
                description: 'Building a versatile download portal application serving hundreds of products and brands against all odds.',
                image: '/img/NA-thumbnail.png',
                tags: ['deep_dive'],
                imageClass: '!object-contain p-4',
                url: '/native-access',
        },
        {
                title: 'Universal Browser',
                description: 'Creating a unified browsing experience serving hundreds of products and brands to last a lifetime.',
                image: '/img/UB-thumbnail.png',
                tags: ['deep_dive'],
                url: '/universal-browser',
        },
        {
                title: 'CRO-in-a-box',
                description:
                        'Go-to-Market performance indicators and prescriptive playbooks tailored to your company’s growth strategy. Full redesign.',
                image: '/img/CRO-thumbnail.png',
                tags: null,
                blueBg: true,
        },
        {
                title: 'Next Generation Hardware',
                description: 'Researching and delivering the next generation of the world’s best-selling integrated MIDI keyboard.',
                image: '/img/NGH-thumbnail.png',
                tags: null,
        },
        {
                title: 'Reaktor 6',
                description: 'Making the classic open-platform visual programming language for digital synthesis more accessible to users.',
                image: '/img/R6-thumbnail.png',
                tags: null,
        },
        {
                title: 'Machine Plus',
                description: 'Creating workflows for the first standalone hardware device Native Instruments has manufactured.',
                image: '/img/MP-thumbnail.png',
                tags: null,
        },
];

const content = `I'm a lifelong designer who was born to build. The heart of my design career was an eight year tenure with Native Instruments as a Product Designer. I collaborated across tech and business teams, delivering award-winning integrated hardware and software experiences to a massive customer base. My users performed in high-pressure situations for huge audiences like Glastonbury festival, often with discerning collaborators like Hans Zimmer, so they demanded rewarding and flawless experiences.

Crafting interfaces for such high-stake scenarios—akin to the precision of car consoles or defense systems, but with significantly smaller budgets—honed my emphasis on meticulous vision, extensive user research, and clear specification writing. I've always held that nurturing engineers with clear direction and inspiration is as crucial as enchanting end-users. This approach emphasizes innovation and ensured we consistently pushed the boundaries of what's possible.

Most recently I was brought on board as UX Consultant for SaaS startup Praction, who are building AI-powered revenue ops tools. Consulting evolved into a full UI redesign and UX overhaul.`;

const skills: string[] = [
        'Design Thinking',
        'Discovery / Ideation / Strategy',
        'UX Research',
        'Prototyping',
        'User Journeys / Flows',
        'Usability Testing',
        'Design System Building',
        'Information Architecture',
        'Specifications',
        'Iterative / Agile Design',
        'Beta Community Building',
        'Executive Presentations',
        'Workshop Facilitation',
];

const tools: string[] = ['Figma', 'Sketch / Abstract', 'Adobe Creative Suite', 'Mixpanel / Metabase', 'Centercode', 'Git', 'JIRA', 'HTML/CSS'];
---

<Layout>
        <style>
                .greyGradient {
                        background: linear-gradient(180deg, #e8e8e8 0%, #e4e4e4 104.73%);
                }
                .blueGradient {
                        background: linear-gradient(
                                        192deg,
                                        rgba(255, 255, 255, 0.11) -14.56%,
                                        rgba(255, 255, 255, 0) 32.85%,
                                        rgba(67, 67, 67, 0) 52.21%,
                                        rgba(0, 0, 0, 0.3) 83.86%
                                ),
                                linear-gradient(180deg, #21145a 0%, #0c042f 100%);
                }
        </style>

        <section>
                <Container class='mx-auto pb-14 2xl:pb-20 md:pb-14 lg:pb-16'>
                        <h1
                                class='text-5xl/[1.3] md:text-7xl/[1.3] xl:text-[112px]/[1.3] font-normal tracking-tight text-brand-grey pb-4 xl:pb-8 2xl:pb-14'>
                                <span>Jonathan Baruc</span>
                                <span class='block text-brand-pink'>Digital Product Designer</span>
                        </h1>
                        <p class='text-lg/[1.5] md:text-xl/[1.5] 2xl:text-3xl/[1.5] max-w-[70rem]'>{objective}</p>
                </Container>
                <Container class='mx-auto'>
                        <div class='grid gap-8 lg:gap-12 pb-12 lg:pb-24 2xl:pb-45 md:grid-cols-2'>
                                {
                                        projects.map((project) => (
                                                <div class='relative'>
                                                        <div
                                                                class='rounded-[1.75rem] aspect-[5/4] overflow-hidden relative'
                                                                class:list={[project.blueBg ? 'blueGradient' : 'greyGradient']}>
                                                                <a href={project.url}>
                                                                        <img
                                                                                src={project.image}
                                                                                alt={`${project.title} project thumbnail`}
                                                                                class='w-full rounded-[1.75rem] object-cover h-full'
                                                                                class:list={[project.imageClass]}
                                                                        />
                                                                </a>
                                                        </div>
                                                        {project.tags ? (
                                                                <ul class='absolute -translate-y-1/2 top-0 left-0 md:-left-5'>
                                                                        {project.tags.map((tag) => (
                                                                                <li>
                                                                                        <Tag data={tag} />
                                                                                </li>
                                                                        ))}
                                                                </ul>
                                                        ) : null}
                                                        <div class='px-5 pt-7 pb-1'>
                                                                <h3 class='text-brand-pink'>
                                                                        <a href={project.url}>{project.title}</a>
                                                                </h3>
                                                                <p class='md:text-lg'>{project.description}</p>
                                                        </div>
                                                </div>
                                        ))
                                }
                        </div>
                </Container>
        </section>

        <section>
                <Container
                        class='px-4 md:px-8 2xl:px-0 pb-8 2xl:pb-20 md:pb-12 lg:pb-16 grid gap-10 md:gap-16 laptop:gap-40 mx-auto md:grid-cols-[2fr_1fr] laptop:grid-cols-[860px_1fr]'>
                        <div
                                set:html={marked.parse(content)}
                                class='flex flex-col gap-6 md:text-lg 2xl:text-3xl'
                        />
                        <div class='flex flex-row gap-6 lg:gap-10 md:flex-col'>
                                <div class='flex-1'>
                                        <h2 class='text-sm/[1.5] text-brand-grey'>My Skills</h2>
                                        <ul class='text-sm/[1.5]'>
                                                {skills.map((skill) => <li>{skill}</li>)}
                                        </ul>
                                </div>
                                <div class='flex-1'>
                                        <h2 class='text-sm/[1.5] text-brand-grey'>My Tools</h2>
                                        <ul class='text-sm/[1.5]'>
                                                {tools.map((skill) => <li>{skill}</li>)}
                                        </ul>
                                </div>
                        </div>
                </Container>
        </section>
</Layout>
